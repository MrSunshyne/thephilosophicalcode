---
import type { HTMLAttributes, HTMLTag } from "astro/types";

interface Props extends HTMLAttributes<"a">{
  title: string;
  href: string;
}

const { title, href } = Astro.props;

let Tag: HTMLTag = "a";
---
<Tag href={href} class="animated" target={!href.includes("http") ? "_self" : "_blank"}>{title}</Tag>
