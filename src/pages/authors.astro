---
import { readAll } from "../lib/markdoc/read";
import { author } from "../lib/markdoc/frontmatter.schema";
import PageLayout from "../layouts/PageLayout.astro";
import PageMeta from "../components/PageMeta.astro";
import ExternalLinkIcon from "../components/ui/icons/external-link.astro";
import { SITE_TITLE } from "../config";

const authors = await readAll({
  directory: "authors",
  frontmatterSchema: author,
});

const sortedAuthors = authors
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  );
---

<PageLayout>
  <PageMeta title={`Authors | ${SITE_TITLE}`} slot="meta" />
  <section slot="main">
    <ul>
      {
        sortedAuthors.map((author) => {
          return (
            <li class="author">
              <div class="title">
                <a href={author.frontmatter.url} target="_blank">
                  <span>{author.frontmatter.title}</span>
                  <ExternalLinkIcon
                    class="icon-realign"
                    title="Link to author"
                    height={16}
                    width={16}
                  />
                </a>
              </div>
            </li>
          );
        })
      }
    </ul>
  </section>
</PageLayout>

<style>
  ul {
    list-style-type: none;
    padding: unset;
  }

  .author {
    display: grid;
    grid-template-columns: 1fr;
    line-height: 1.5;
  }

  @media (min-width: 640px) {
    .author {
      grid-template-columns: 1fr auto;
      /* gap: 2rem; */
    }
  }

  .author + .author {
    padding-top: 0.5rem;
  }

  .title a {
    color: var(--text);
    border-bottom: none;
  }

  .title a:hover {
    color: var(--text-link);
  }

  .icon-realign {
    margin-bottom: -1.5px;
    margin-left: 2px;
  }

</style>
